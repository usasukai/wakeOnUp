{
  "name": "wakeonlan",
  "version": "0.1.0",
  "description": "Wake-on-LAN application for remotely waking up computers on your network",
  "author": "usasuke",
  "repository": {
    "type": "git",
    "url": "https://code.varlox.me/usasuke/wakeOnUp.git"
  },
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "BUILD_TARGET=web next build",
    "start": "next start",
    "lint": "next lint",
    "electron-dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && tsup --watch && electron .\"",
    "export:electron": "BUILD_TARGET=electron next build",
    "electron-build": "BUILD_TARGET=electron next build && tsup && electron-builder",
    "compile-electron": "tsup",
    "gen:favicon": "node scripts/gen-favicon.js"
  },
  "build": {
    "appId": "com.example.wakeonlan",
    "productName": "WakeOnLan",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "public/icon.png"
    },
    "files": [
      "dist/**/*",
      "out/**/*",
      "package.json",
      "machines.json"
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "@heroui/react": "^2.8.7",
    "framer-motion": "^12.23.26",
    "next": "15.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.7",
    "uuid": "^13.0.0",
    "wake_on_lan": "^1.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^11.0.0",
    "@types/wake_on_lan": "^0.0.33",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^2.1.8",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.5.1",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}